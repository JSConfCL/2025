---
import { Icon } from 'astro-icon/components'

interface Props {
  title: string
  href: string
}

const { title, href } = Astro.props;
---
<div class="click-to-scroll-wrapper">
  <h3>{title}</h3>
  <a href={href}>
    <Icon name="chevron-down" />
  </a>
</div>

<style>
  .click-to-scroll-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 2rem 0;

    & h3 {
      font-size: 2rem;
      font-weight: 600;
      line-height: 1.2;
      text-align: center;
      text-wrap: pretty;
      color: #404040;

      margin-bottom: 2rem;
    }

    & svg {
      width: 50px;
      height: 50px;
      fill: var(--color-primary);
    }
  }
</style>
